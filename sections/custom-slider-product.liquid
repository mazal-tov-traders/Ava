<div class="slider-product">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="heading" style="color: {{ section.settings.color_heading_label }};">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="icon-and-text__wrapper">
      {% if section.settings.icon != blank %}
        {{ section.settings.icon | image_url: width: 108 | image_tag: class: 'icon-stars', loading: 'lazy' }}
      {% endif %}
      {% if section.settings.text != blank %}
        <h3 class="text" style="color:{{ section.settings.color_text_label }}">
          {{ section.settings.text }}
        </h3>
      {% endif %}
    </div>
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'product' %}
              <div class="swiper-slide">
                {% if block.settings.image != blank %}
                  <div class="border-for-img border-for-img-{{ forloop.index }}">
                    {{
                      block.settings.image
                      | image_url: width: 140
                      | image_tag: class: 'image-product', loading: 'lazy'
                    }}
                  </div>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h4 class="heading" style="color: {{ block.settings.color_heading_label }};">
                    {{ block.settings.heading }}
                  </h4>
                {% endif %}
                <div class="icon-and-text__wrapper">
                  {% if block.settings.icon != blank %}
                    {{ block.settings.icon | image_url: width: 108 | image_tag: class: 'icon-stars', loading: 'lazy' }}
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <h3 class="text" style="color:{{ block.settings.color_text_label }}">
                      {{ block.settings.text }}
                    </h3>
                  {% endif %}
                </div>
                {% if block.settings.sub_title != blank %}
                  <h3 class="sub_title" style="color:{{ block.settings.color_sub_title_label }}">
                    {{ block.settings.sub_title }}
                  </h3>
                {% endif %}
                {% if block.settings.content != blank %}
                  <h3 class="content" style="color:{{ block.settings.color_content_label }}">
                    {{ block.settings.content }}
                  </h3>
                {% endif %}
                {% if block.settings.author != blank %}
                  <h3 class="author" style="color:{{ block.settings.color_author_label }}">
                    {{ block.settings.author }}
                  </h3>
                {% endif %}
                {% if block.settings.date != blank %}
                  <h3 class="date" style="color:{{ block.settings.color_date_label }}">
                    {{ block.settings.date }}
                  </h3>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    <div class="swiper-pagination"></div>
    <div class="wrapper_btn-slider">
      <div class="swiper-button-prev">
        <svg width="20" height="8" viewBox="0 0 20 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 3.5C19.2761 3.5 19.5 3.72386 19.5 4C19.5 4.27614 19.2761 4.5 19 4.5L19 3.5ZM0.646446 4.35355C0.451185 4.15829 0.451185 3.84171 0.646446 3.64645L3.82843 0.464466C4.02369 0.269204 4.34027 0.269204 4.53553 0.464466C4.7308 0.659728 4.7308 0.976311 4.53553 1.17157L1.70711 4L4.53553 6.82843C4.7308 7.02369 4.7308 7.34027 4.53553 7.53553C4.34027 7.7308 4.02369 7.7308 3.82843 7.53553L0.646446 4.35355ZM19 4.5L1 4.5L1 3.5L19 3.5L19 4.5Z" fill=""/>
        </svg>
      </div>
      <div class="swiper-button-next">
        <svg width="20" height="8" viewBox="0 0 20 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 3.5C0.723858 3.5 0.5 3.72386 0.5 4C0.5 4.27614 0.723858 4.5 1 4.5L1 3.5ZM19.3536 4.35355C19.5488 4.15829 19.5488 3.84171 19.3536 3.64645L16.1716 0.464466C15.9763 0.269204 15.6597 0.269204 15.4645 0.464466C15.2692 0.659728 15.2692 0.976311 15.4645 1.17157L18.2929 4L15.4645 6.82843C15.2692 7.02369 15.2692 7.34027 15.4645 7.53553C15.6597 7.7308 15.9763 7.7308 16.1716 7.53553L19.3536 4.35355ZM1 4.5L19 4.5L19 3.5L1 3.5L1 4.5Z" fill=""/>
        </svg>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
<script>
  function sliderInit() {
    var swiper = new Swiper('.mySwiper', {
      freeMode: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        980: {
          slidesPerView: 3,
          spaceBetween: 60,
        },
        600: {
          slidesPerView: 2,
          spaceBetween: 40,
        },
        320: {
          slidesPerView: 1,
          spaceBetween: 20,
        },
      },
    });
  }
  document.addEventListener('DOMContentLoaded', function () {
    sliderInit();
  });
</script>

